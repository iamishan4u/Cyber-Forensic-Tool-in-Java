    private void SkypeComboBoxItemStateChanged(java.awt.event.ItemEvent evt) {                                               
     System.out.print("workin");
       
     if(SkypeComboBox.getSelectedIndex()==1)
            
            {
            try {
                
                con=DBConnection.getSkypeConnection();
                System.out.println("CONNECTION " +con);
                p=con.prepareStatement("select skypename from Contacts");
                ResultSet rs=p.executeQuery();
                while(rs.next())
                {
                    SkypeTextArea.append(rs.getString("skypename") +"\n");
                }
                con.close();
            }catch (Exception ex) {
                ex.printStackTrace();
            }
        }
            if(SkypeComboBox.getSelectedIndex()==2)
                {
            try {
                con=DBConnection.getSkypeConnection();
                PreparedStatement p=con.prepareStatement("select body_xml from Messages");
                ResultSet rs=p.executeQuery();
                while(rs.next())
                {
                    SkypeTextArea.append(rs.getString("body_xml") +"\n");
                }
                con.close();
            }catch (Exception ex) {
                ex.printStackTrace();
                System.out.println(ex);
            }
        }
    }                                              
    
